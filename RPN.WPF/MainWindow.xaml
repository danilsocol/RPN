<Window x:Class="RPN.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPN.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel>

        <DockPanel Name="spMenu">
            <TextBlock 
            Background="Gray"
            FontSize="50" Height="56" Width="98" VerticalAlignment="Top"
            ><Run Text="ОПЗ"/>
            </TextBlock>

            <StackPanel Height="58" VerticalAlignment="Top">

                <TextBox Name="tbExpression"
                FontSize="25" VerticalAlignment="Top" Background="MintCream"
               Text="(1/2+0,5)+2*((4-1)/3)">
                </TextBox>

                <Button Name="btCalculate" 
                    FontSize="17" Background="Red" Height="24" 
                    Click="btnCalculate_Click">
                    Вычеслить
                </Button>

            </StackPanel>
        </DockPanel>

        <DockPanel Name="dpResult"
            Margin="20" 
                   Visibility="Hidden">

            <TextBlock Background="Gray"
            FontSize="20" Height="33" Width="106" HorizontalAlignment="Left" >
                <Run Text="Результат:"/>
            </TextBlock>

            <TextBlock FontSize="20" Height="33" 
                       VerticalAlignment="Top" Background="Gray">
                Вывод
            </TextBlock>

        </DockPanel>


    </StackPanel>
</Window>
